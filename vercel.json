{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install && npx prisma generate",
  "builds": [
    { 
      "src": ".dist/api/index.js", 
      "use": "@vercel/node",
      "config": { "includeFiles": ".dist/**,generated/**" }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": ".dist/api/index.js" }
  ]
}
